{
  "compilerOptions": {
    "outDir": "./dist",
    "importHelpers": true,
    "moduleResolution": "node",
    "typeRoots": [
      "lib"
    ],
    "target": "es2016",                                  

    "module": "commonjs",
    "esModuleInterop": true,  
    "forceConsistentCasingInFileNames": true,   
    "strict": true,        
    "skipLibCheck": true                      
  }
}